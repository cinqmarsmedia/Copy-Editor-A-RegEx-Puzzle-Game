{
  "name": "copy-editor",
  "version": "0.0.1",
  "author": "Cinq-Mars Media <info@cinqmarsmedia.com>",
  "homepage": "https://cinqmarsmedia.com",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "ionic-app-scripts serve",
    "clean": "ionic-app-scripts clean",
    "build": "ionic build --aot false --environment prod --output-hashing all --sourcemaps false --extract-css true --named-chunks false --build-optimizer true --minifyjs=true --minifycss=true --optimizejs=true",
    "lint": "ionic-app-scripts lint",
    "build-mac": "env CSC_LINK='./direct.p12' npx electron-builder -m",
    "build-wl": "nvm exec 16 npx electron-builder -wl"
  },
  "build": {
    "files": [
      "!node_modules",
      "www/**/*",
      "main.js",
      "operation-timer.js",
      "preload.js"
    ],
    "npmRebuild": false,
    "appId": "com.cinqmarsmedia.copyeditor",
    "productName": "Copy Editor",
    "copyright": "Copyright Â© 2021 Cinq-Mars Media",
    "asar": true,
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/icons/win/icon.ico"
    },
    "mac": {
      "icon": "./build/icons/mac/icon.icns",
      "category": "public.app-category.games",
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.inherit.plist",
      "target": [
        {
          "target": "dir",
          "arch": "universal"
        }
      ]
    },
    "remoteBuild": true,
    "linux": {
      "target": [
        "zip",
        "AppImage",
        "deb"
      ],
      "icon": "./build/icons/png"
    }
  },
  "dependencies": {
    "@angular/animations": "5.2.11",
    "@angular/common": "5.2.11",
    "@angular/compiler": "5.2.11",
    "@angular/core": "5.2.11",
    "@angular/forms": "5.2.11",
    "@angular/platform-browser": "5.2.11",
    "@angular/platform-browser-dynamic": "5.2.11",
    "@ctrl/ngx-codemirror": "^1.3.10",
    "@ionic-native/core": "4.20.0",
    "@ionic-native/splash-screen": "4.20.0",
    "@ionic-native/status-bar": "4.20.0",
    "@ionic/storage": "2.2.0",
    "@ng-stack/contenteditable": "^1.1.0",
    "angularfire2": "^5.0.0-rc.11",
    "chart.js": "^2.7.2",
    "codemirror": "^5.57.0",
    "diff": "^4.0.2",
    "firebase": "^5.2.0",
    "howler": "^2.2.3",
    "ionic-angular": "3.9.9",
    "ionicons": "3.0.0",
    "ng2-charts": "^2.2.5",
    "ng2-charts-x": "^2.0.6",
    "ng2-dragula": "^2.1.1",
    "rxjs": "6.0.0",
    "rxjs-compat": "6.2.2",
    "sw-toolbox": "3.6.0",
    "xregexp": "^5.0.1",
    "zone.js": "0.8.29"
  },
  "devDependencies": {
    "@angular/compiler-cli": "5.2.11",
    "@ionic/app-scripts": "3.2.3",
    "@types/node": "^14.14.25",
    "electron": "^13.2.3",
    "electron-builder": "^22.11.7",
    "electron-notarize": "latest",
    "typescript": "3.5.1"
  },
  "description": "Copy Editor"
}
